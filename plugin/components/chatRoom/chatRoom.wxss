/* plugin/components/chatRoom/chatRoom.wxss */
.inline-block {
  display: inline-block;
}
.box-sizing {
  box-sizing: border-box
}
.chat-show{
  width: 100%;
  height: 90vh;
  padding: 30rpx;
  overflow: auto;
  position: fixed;
  top:0;
  left:0;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
  }
.chat-input{
  position: fixed;
  width: 100%;
  bottom:0;
  left:0;
  padding:10rpx;
  background: #eee;
  display: flex;
  justify-content: space-between;
}
.chat-input>input{
  width: 80%;
  height: 88rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  background: #fff;
  padding-left: 10rpx;
}
.chat-input>button{
  height: 88rpx;
  line-height: 88rpx;
}
.list-left{
  text-align: left;
}
.list-right{
  text-align: right;
}
.chat-user-img{
  width: 100rpx;
  height: 100rpx;
  vertical-align: top;
  border-radius: 50%;
  background: #eee;
}
.chat-msg{
  width: auto;
  max-width: 80%;
  height: auto;
  background: #54DC56;
  font-size: 30rpx;
  padding:10rpx;
  vertical-align: top;
  margin-right: 20rpx;
  position: relative;
  margin-bottom: 50rpx;
  min-height: 100rpx;
  text-align: left;
  border-radius: 4rpx;
}
.chat-msg-left{
  width: auto;
  max-width: 80%;
  height: auto;
  background: #54DC56;
  font-size: 30rpx;
  padding:10rpx;
  vertical-align: top;
  margin-left: 20rpx;
  position: relative;
  margin-bottom: 50rpx;
  min-height: 100rpx;
  text-align: left;
  border-radius: 4rpx;
}
.list-trange{
    width: 0;
    height: 0;
    border-top: 10rpx solid transparent;
    border-left: 10rpx solid #54DC56;
    border-bottom: 10rpx solid transparent;
    position: absolute;
    top:40rpx;
    right: -10rpx;
}
.list-trange-left{
  width: 0;
  height: 0;
  border-top: 10rpx solid transparent;
  border-right: 10rpx solid #54DC56;
  border-bottom: 10rpx solid transparent;
  position: absolute;
  top:40rpx;
  left: -10rpx;
}